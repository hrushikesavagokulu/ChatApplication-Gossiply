<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || "Admin Dashboard" %></title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    :root {
      --primary-color: #1f8ef1;
      --danger-color: #e74c3c;
      --bg-color: #121212;
      --card-bg: #1e1e1e;
      --text-color: #e0e0e0;
      --muted-text: #aaaaaa;
      --border-color: #333;
      --hover-bg: #2a2a2a;
      --shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    }

    body {
      background-color: var(--bg-color);
      color: var(--text-color);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 30px;
    }

    h1, h2 {
      color: var(--primary-color);
      margin-bottom: 20px;
    }

    a.btn-home {
      color: var(--primary-color);
      text-decoration: none;
      font-weight: bold;
      background-color: var(--card-bg);
      padding: 10px 15px;
      border-radius: 8px;
      box-shadow: var(--shadow);
      display: inline-block;
      transition: 0.2s ease;
      margin-bottom: 20px;
    }

    a.btn-home:hover {
      background-color: var(--hover-bg);
    }

    .table thead {
      background-color: #1a1a1a;
    }

    .table th {
      color: var(--primary-color);
    }

    .table td {
      color: var(--text-color);
    }

    .table-hover tbody tr:hover {
      background-color: var(--hover-bg);
    }

    .btn-danger {
      background-color: var(--danger-color);
      border: none;
    }

    .btn-danger:hover {
      background-color: #c0392b;
    }

    .table-responsive {
      box-shadow: var(--shadow);
      border-radius: 12px;
      overflow: hidden;
    }

    @media (max-width: 768px) {
      h1, h2 {
        text-align: center;
      }
    }
  </style>
</head>
<body>

  <!-- Home Button -->
  <a href="/home" class="btn-home"><i class="fa-solid fa-house me-2"></i>Home</a>

  <!-- Admin Heading -->
  <h1 class="fw-bold">Admin Dashboard - Welcome <%= admin.username %></h1>
  <h2>All Users</h2>

  <!-- Responsive Table -->
  <div class="table-responsive">
    <table class="table table-dark table-bordered table-hover align-middle">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Joined</th>
          <th>Posts</th>
          <th>Friends</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= new Date(user.createdAt).toLocaleString() %></td>
            <td><%= user.posts?.length || 0 %></td>
            <td><%= user.friends?.length || 0 %></td>
            <td>
              <form action="/admin/delete/<%= user._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm"
                  onclick="return confirm('Are you sure you want to delete <%= user.username %>?')">
                  <i class="fa-solid fa-trash"></i> Delete
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
