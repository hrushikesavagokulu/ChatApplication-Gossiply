<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Gossiply - Welcome</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet"/>
  <!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      font-family: 'Poppins', sans-serif;
      
      background-color: #111827;
    }

    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: url("/chat-bg.jpg") no-repeat center center/cover;
      z-index: -3;
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to top right, rgba(17, 24, 39, 0.85), rgba(0, 0, 0, 0.4));
      z-index: -2;
    }

    .top-links {
      position: absolute;
      top: 20px;
      right: 30px;
      display: flex;
      gap: 15px;
      z-index: 2;
    }

    .top-links a {
      text-decoration: none;
      padding: 10px 18px;
      background: rgba(255, 255, 255, 0.15);
      color: #ffffff;
      border: 1px solid #ffffffb0;
      border-radius: 6px;
      font-weight: 500;
      transition: background 0.3s, transform 0.2s;
    }

    .top-links a:hover {
      background: rgba(255, 204, 0, 0.25);
      transform: scale(1.05);
    }

    .content {
      position: relative;
      z-index: 2;
      padding: 40px 60px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: #fff;
      animation: fadeIn 1.8s ease-in-out;
      backdrop-filter: blur(12px);
      background: rgba(17, 24, 39, 0.6);
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      max-width: 40%;
      margin: auto;
      
      top: 50%;
      transform: translateY(-50%);
    }

    h1 {
      font-size: 3.2rem;
      margin-bottom: 25px;
      text-shadow: 1px 1px 10px rgba(0, 0, 0, 0.7);
    }

    .enter-btn {
      padding: 14px 36px;
      font-size: 1.2rem;
      background: #ffcc00;
      color: #000;
      border: none;
      border-radius: 8px;
      font-weight: bold;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
      transition: transform 0.3s ease, background 0.3s;
      text-decoration: none;
    }

    .enter-btn:hover {
      background: #ffc107;
      transform: scale(1.08);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .emoji {
      position: absolute;
      top: 100vh;
      font-size: 1.5rem;
      opacity: 0.8;
      z-index: 0;
      animation-name: floatUp;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      pointer-events: none;
    }

    @keyframes floatUp {
      0% {
        transform: translateY(0);
        opacity: 0;
      }
      30% {
        opacity: 1;
      }
      100% {
        transform: translateY(-120vh);
        opacity: 0;
      }
    }

    @media (max-width: 600px) {
      h1 {
        font-size: 2rem;
        padding: 0 20px;
      }

      .content {
        padding: 30px 20px;
      }

      .top-links {
        flex-direction: column;
        top: 10px;
        right: 10px;
      }
    }

    @media (max-width: 768px) {
  .content {
    max-width: 85%;
    padding: 30px 24px;
    margin-top: 40px;
    top: auto;
    transform: none;
  }

  h1 {
    font-size: 2rem;
    line-height: 1.3;
    padding: 0 10px;
  }

  .enter-btn {
    font-size: 1rem;
    padding: 12px 24px;
  }

  .top-links {
    flex-direction: column;
    gap: 10px;
    top: 10px;
    right: 10px;
  }

  .top-links a {
    padding: 8px 14px;
    font-size: 0.9rem;
  }

  .emoji {
    font-size: 1.2rem !important;
  }
}

@media (max-width: 480px) {
  .content {
    max-width: 95%;
    padding: 24px 18px;
  }

  h1 {
    font-size: 1.6rem;
  }

  .enter-btn {
    font-size: 0.95rem;
    padding: 10px 20px;
  }
}

  </style>
</head>
<body>

  <!-- Background Layers -->
  <div class="background"></div>
  <div class="overlay"></div>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-transparent px-3">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold text-warning" href="#">Gossiply 💬</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
      aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
      <div class="navbar-nav">
        <a class="nav-link text-white" href="/login">Login</a>
        <a class="nav-link text-white" href="/signup">Register</a>
      </div>
    </div>
  </div>
</nav>


  <!-- Centered Blurred Content Box -->
  <div class="content">
    <h1>Welcome to Gossiply 💬</h1>
    <a class="enter-btn" href="/home">Enter</a>
  </div>

  <!-- Floating Emojis -->
  <script>
    const emojis = [
      '💬', '😄', '😂', '😉', '😊', '😎', '🙌', '🥳', '🤩', '🎉',
      '👍', '🙈', '😜', '😇', '😻', '🌈', '✨', '🌟', '💥', '🔥',
      '💖', '💫', '😈', '👀', '💭', '🙃', '😅', '😆', '🌀', '🔆'
    ];
    const total = 40;

    for (let i = 0; i < total; i++) {
      const emoji = document.createElement('div');
      emoji.classList.add('emoji');
      emoji.innerText = emojis[Math.floor(Math.random() * emojis.length)];
      emoji.style.left = Math.random() * 100 + 'vw';
      emoji.style.animationDuration = (3 + Math.random() * 2) + 's';
      emoji.style.animationDelay = Math.random() * 3 + 's';
      emoji.style.fontSize = (1 + Math.random() * 2) + 'rem';
      document.body.appendChild(emoji);
    }
  </script>

</body>
</html>
